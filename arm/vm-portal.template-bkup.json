{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "VmName": {
            "defaultValue": "KokoTaylor",
            "type": "String"
        },
        "ImageId": {
            "defaultValue": "/subscriptions/a7a2a563-b184-4577-b1c1-b959c93b7d47/resourceGroups/myResourceGroupDev/providers/Microsoft.Compute/images/initialimagem20220328124642641082",
            "type": "String"
        },
        "NicId": {
            "defaultValue": "/subscriptions/a7a2a563-b184-4577-b1c1-b959c93b7d47/resourceGroups/myResourceGroupDev/providers/Microsoft.Network/networkInterfaces/myVM20220328124642641082VMNic",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2021-11-01",
            "name": "[parameters('VmName')]",
            "location": "westus",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "Standard_DS1_v2"
                },
                "storageProfile": {
                    "imageReference": {
                        "id": "[parameters('ImageId')]"
                    },
                    "osDisk": {
                        "osType": "Linux",
                        "name": "[concat(parameters('VmName'), '_disk1_')]",
                        "createOption": "FromImage",
                        "caching": "ReadWrite",
                        "deleteOption": "Detach",
                        "diskSizeGB": 30
                    },
                    "dataDisks": []
                },
                "osProfile": {
                    "computerName": "[parameters('VmName')]",
                    "adminUsername": "jones",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "/home/jones/.ssh/authorized_keys",
                                    "keyData": "ssh-rsa "
                                }
                            ]
                        },
                        "provisionVMAgent": true,
                        "patchSettings": {
                            "patchMode": "ImageDefault",
                            "assessmentMode": "ImageDefault"
                        }
                    },
                    "secrets": [],
                    "allowExtensionOperations": true
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[parameters('NicId')]"
                        }
                    ]
                }
            }
        }
    ]
}