{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": { 
            "type": "String", 
            "defaultValue" : "projectmanagement2myorg"
        },
        "diagnosticAccountName": { 
            "type": "String", 
            "defaultValue" : "diag0941a47d4634e735"
        },
        "resourceGroupRegion": { 
            "type": "String", 
            "defaultValue" : "westus"
        },
        "environmentTag": { 
            "type": "String", 
            "defaultValue" : "Terraform Demo"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-09-01",
            "name": "[parameters('storageAccountName')]",
            "location": "[parameters('resourceGroupRegion')]",
            "tags": {
                "environment": "[parameters('environmentTag')]"
            },
            "sku": {
                "name": "Standard_LRS",
                "tier": "Standard"
            },
            "kind": "StorageV2",
            "identity": {
                "type": "None"
            },
            "properties": {
